<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:backgroundTint="?attr/colorSurfaceContainer"
    app:strokeColor="@android:color/transparent"
    app:cardCornerRadius="4dp"
    app:contentPadding="2dp"
    android:layout_marginHorizontal="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:paddingVertical="8dp"
        >

    <TextView
        android:id="@+id/day_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sun"
        style="@style/MediumTitleTextStyle"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/day_number_text_view"
        />

    <TextView
        android:id="@+id/day_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumTitleTextStyle"
        android:textSize="16sp"
        tools:text="30"
        app:layout_constraintTop_toBottomOf="@id/day_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>