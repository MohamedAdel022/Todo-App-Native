<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- <item name="colorPrimaryVariant">@color/my_light_primary_variant</item> -->
        <!-- <item name="colorOnPrimary">@color/my_light_on_primary</item> -->
        <!-- make the splash screen translucent -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorAccent">@color/mint</item>
        <item name="colorSurface">@color/mint</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="android:statusBarColor">@color/sky_blue</item>

    </style>
    <style name="fab_rounded" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />

    <style name="LargeTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="MediumTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumLabelTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="LargeLabelTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LightDescriptionTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>