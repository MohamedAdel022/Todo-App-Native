<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorSurfaceContainer">@color/black3</item>
        <item name="colorSurface">@color/black2</item>
    </style>

    <style name="LargeTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MediumTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumLabelTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeLabelTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="LightDescriptionTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>